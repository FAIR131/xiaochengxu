<!-- 轮播图区域 -->
<swiper indicator-dots circular>
  <swiper-item wx:for="{{swiperList}}" wx:key="id">
    <image src="{{item.image}}" mode=""/>
  </swiper-item>
</swiper>

<!-- 九宫格 -->
<view class="gridList">
  <navigator class="gridItem" wx:for="{{gridList}}" wx:key="id" url="/pages/shopList/shopList?id={{item.id}}&title={{item.name}}">
  <image src="{{item.icon}}" mode=""/>
  <text>{{item.name}}</text>
  </navigator>

</view>

<!-- 图片区 -->
<view class="imgBox">
<image src="/images/link-01.png" mode="widthFix"/>
<image src="/images/link-02.png" mode="widthFix"/>
</view>